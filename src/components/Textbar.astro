<div class="bar-wrapper">
  <div id="rssBlock">
    <p class="cnnContents">
      <span class="marqueeStyle">&nbsp;Kune festival - 2023 - Kune festival - 2023 -Kune festival - 2023 -</span>
      <!-- duplicate above, change style to allow continous scroll -->
      <span class="marqueeStyle2">&nbsp;Kune festival - 2023 - Kune festival - 2023 -Kune festival - 2023 - &nbsp;</span>
    </p>
  </div>
</div>

<style>
  .bar-wrapper {
    background-color: var(--mainGreen);
  }

  #rssBlock {
    max-width: 1000;
    margin-inline: auto;
    left: 0px;
    width: 100vw;
    padding-block: 10px;
    overflow: hidden;
  }

  /*remove p*/
  .cnnContents {
    width: 100%;

    margin: 0 auto;
    font-size: 25px;
    white-space: nowrap;
    text-transform: uppercase;
    color: var(--mainBlue);
    font-weight: 300;
    font-family: "anonymous-pro", monospace;
    font-style: normal;
  }

  .marqueeStyle {
    display: inline-block;
    /* Apply animation to this element */
    -webkit-animation: scrolling-left1 20s linear infinite;
    animation: scrolling-left1 20s linear infinite;
  }

  .marqueeStyle2 {
    display: inline-block;
    /* Apply animation to this element */
    -webkit-animation: scrolling-left2 20s linear infinite;
    animation: scrolling-left2 20s linear infinite;
    transform: translateX(100%);
    animation-delay: 10s;
  }
  /* scrolling-left is continuous/repeatly text */
  @keyframes scrolling-left1 {
    0% {
      transform: translateX(100%);
      -webkit-transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
      -webkit-transform: translateX(-100%);
    }
  }
  @keyframes scrolling-left2 {
    0% {
      transform: translateX(0%);
      -webkit-transform: translateX(0%);
    }
    100% {
      transform: translateX(-200%);
      -webkit-transform: translateX(-200%);
    }
  }

  @-webkit-keyframes scrolling-left1 {
    0% {
      -webkit-transform: translateX(100%);
    }
    100% {
      -webkit-transform: translateX(-100%);
    }
  }
  @-webkit-keyframes scrolling-left2 {
    0% {
      -webkit-transform: translateX(0%);
    }
    100% {
      -webkit-transform: translateX(-200%);
    }
  }
</style>
