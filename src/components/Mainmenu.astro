---
import "../styles/main-style.css"

---
<div class="menu-container">
    <menu>
        <div class="logo-container">
            <a href="">
                <img src="/img/logo.png" alt="">
            </a>
            
        </div>

        <div>
            <ul class="main-menu">
                <li class="ekstra-menu"><a href="/tickets">TICKETS</a></li>
                <li class="ekstra-menu"><a href="/lineUp">LINE UP</a></li>
                <li class="burger-menu"> <img  src="/img/burger.svg" alt=""></li>
            </ul>
        </div>
    </menu>
</div>

<div class="overlaymenu">
    <div class="close-container">
        <img src="/img/close.svg" alt="">
    </div>
    <div>
        <ul class="sub-menu">
            <li><a href="/lineUp">LINE UP</a></li>
            <li><a href="/volunteer">VOLUNTEER</a></li>
            <li><a href="/tickets">TICKETS</a></li>
            <li><a href="/gallery">GALLERY</a></li>
            <li><a href="/about">ABOUT</a></li>
            
            
        </ul>
    </div>

</div>


<style>
   
    .menu-container{
        padding: 10px 20px;
    }

    menu{
        display:flex;
        justify-content: space-between;
        
    }

    .logo-container img{
        width: 50px;
    }
    .main-menu{
        list-style: none;
        display: flex;
    }
    .main-menu a, .overlaymenu a{
        padding: 20px 25px;
        display: block;
    }
   li img {
       width: 40px;
       
    }
    .ekstra-menu{
        display: none;
    }
    .burger-menu{
        padding: 15px 25px;
        
    }

    .overlaymenu{
        height: 100vh;
        width: 80%;
        background-color: var(--mainGreen);
        position:fixed;
        top:0;
        right:0;
        overflow: hidden;
        transform: translateX(100%);
        transition: transform 0.2s;
        z-index: 999;
    }

  
    body .open {
        transform: translateX(0);
    }

    .close-container{
        text-align: right;
        padding: 20px;
    }
    .close-container img{
        width: 20px;
    }
    .sub-menu a{
        font-size: 35px;
        color: var(--mainGreen);
        -webkit-text-stroke: 2px var(--mainBlue);
        letter-spacing: 2px;
    }
    .sub-menu a:hover{
        color: var(--mainBlue);
    }

    @media only screen and (min-width: 600px) {
        .overlaymenu{
            width: 500px;
        }
        .ekstra-menu{
        display: block;
        }
       
        .sub-menu a{
        font-size: 55px;

        -webkit-text-stroke: 3px var(--mainBlue);
       
    }
    }



    

</style>

<script>
   const overlaymenu = document.querySelector(".overlaymenu") 
   const burgermenu = document.querySelector(".burger-menu");
   const close = document.querySelector(".close-container");

   burgermenu.addEventListener("click",function(){
    overlaymenu.classList.add("open");
   });

   close.addEventListener("click", function(){
    overlaymenu.classList.remove("open");
   })

</script>